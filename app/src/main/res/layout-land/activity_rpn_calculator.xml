<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".RpnCalculator">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chs"
        android:id="@+id/button_chs"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/button_7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clr"
        android:id="@+id/button_clr"
        android:layout_below="@+id/button_chs"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter"
        android:id="@+id/button_enter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_clr"
        android:layout_alignBottom="@+id/button_decimal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seven"
        android:id="@+id/button_7"
        android:layout_toRightOf="@+id/button_chs"
        android:layout_toEndOf="@+id/button_chs"
        android:layout_below="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/eight"
        android:id="@+id/button_8"
        android:layout_toEndOf="@+id/button_7"
        android:layout_toRightOf="@+id/button_7"
        android:layout_below="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nine"
        android:id="@+id/button_9"
        android:layout_toEndOf="@+id/button_8"
        android:layout_toRightOf="@+id/button_8"
        android:layout_below="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/divide"
        android:id="@+id/button_divide"
        android:layout_toEndOf="@+id/button_9"
        android:layout_toRightOf="@+id/button_9"
        android:layout_below="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/four"
        android:id="@+id/button_4"
        android:layout_toEndOf="@+id/button_clr"
        android:layout_below="@+id/button_7"
        android:layout_alignLeft="@+id/button_1"
        android:layout_alignStart="@+id/button_1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/five"
        android:id="@+id/button_5"
        android:layout_toEndOf="@+id/button_7"
        android:layout_below="@+id/button_8"
        android:layout_toRightOf="@+id/button_7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/six"
        android:id="@+id/button_6"
        android:layout_toEndOf="@+id/button_5"
        android:layout_below="@+id/button_9"
        android:layout_toRightOf="@+id/button_5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/multiply"
        android:id="@+id/button_multiply"
        android:layout_toEndOf="@+id/button_6"
        android:layout_below="@+id/button_9"
        android:layout_toRightOf="@+id/button_6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/one"
        android:id="@+id/button_1"
        android:layout_toEndOf="@+id/button_enter"
        android:layout_alignTop="@+id/button_2"
        android:layout_toRightOf="@+id/button_enter" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/two"
        android:id="@+id/button_2"
        android:layout_toEndOf="@+id/button_1"
        android:layout_below="@+id/button_5"
        android:layout_toRightOf="@+id/button_1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/three"
        android:id="@+id/button_3"
        android:layout_toEndOf="@+id/button_2"
        android:layout_below="@+id/button_6"
        android:layout_toRightOf="@+id/button_2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subtract"
        android:id="@+id/button_subtract"
        android:layout_toEndOf="@+id/button_3"
        android:layout_below="@+id/button_6"
        android:layout_toRightOf="@+id/button_3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zero"
        android:id="@+id/button_0"
        android:layout_toEndOf="@+id/button_enter"
        android:layout_alignTop="@+id/button_decimal"
        android:layout_toRightOf="@+id/button_enter" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/decimal"
        android:id="@+id/button_decimal"
        android:layout_toEndOf="@+id/button_0"
        android:layout_below="@+id/button_2"
        android:layout_toRightOf="@+id/button_0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:id="@+id/button_back"
        android:layout_toEndOf="@+id/button_decimal"
        android:layout_below="@+id/button_3"
        android:layout_toRightOf="@+id/button_decimal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add"
        android:id="@+id/button_add"
        android:layout_toEndOf="@+id/button_back"
        android:layout_below="@+id/button_subtract"
        android:layout_toRightOf="@+id/button_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/value"
        android:id="@+id/textView"
        android:layout_toEndOf="@+id/button_enter"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
